<!-- Use this to loop through for different line options -->
<template_data>
    <category>
        <name>network</name>
        <subcategory>
            <name>Internet Port (WAN)</name>
            <item>
                <variable>$wan_type</variable>
                <default_value>0</default_value>
                <description>Internet Port (WAN) Type</description>
                <type>radio</type>
                <data>
                    <text>DHCP</text>
                    <value>0</value>
                </data>
                <data>
                    <text>PPPoE</text>
                    <value>1</value>
                </data>
                <data>
                    <text>Static IP</text>
                    <value>2</value>
                </data>
            </item>
            <item>
                <dependent>$wan_type|2</dependent>
                <variable>$static_ip_address</variable>
                <default_value></default_value>
                <description>IP Address</description>
                <max_chars>16</max_chars>
                <type>input</type>
            </item>
            <item>
                <dependent>$wan_type|2</dependent>
                <variable>$static_subnet_mask</variable>
                <default_value>255.255.255.0</default_value>
                <description>Subnet Mask</description>
                <max_chars>16</max_chars>
                <type>input</type>
            </item>
            <item>
                <dependent>$wan_type|2</dependent>
                <variable>$static_gateway</variable>
                <default_value></default_value>
                <description>Default Gateway</description>
                <max_chars>16</max_chars>
                <type>input</type>
            </item>
            <item>
                <dependent>$wan_type|2</dependent>
                <variable>$first_dns</variable>
                <default_value></default_value>
                <description>Primary DNS</description>
                <max_chars>16</max_chars>
                <type>input</type>
            </item>
            <item>
                <dependent>$wan_type|2</dependent>
                <variable>$second_dns</variable>
                <default_value></default_value>
                <description>Secondary DNS</description>
                <max_chars>16</max_chars>
                <type>input</type>
            </item>
            <item>
                <type>break</type>
            </item>
        </subcategory>
        <subcategory>
            <name>PC Port</name>
            <item>
                <category>network</category>
                <sub_category>PC Port</sub_category>
                <variable>$pcport_act_as</variable>
                <default_value>1</default_value>
                <description>PC Port act as</description>
                <type>radio</type>
                <data>
                    <text>Router</text>
                    <value>0</value>
                </data>
                <data>
                    <text>Bridge</text>
                    <value>1</value>
                </data>
            </item>
            <item>
                <category>network</category>
                <sub_category>PC Port</sub_category>
                <dependent>$pcport_act_as|0</dependent>
                <variable>$pcport_router_ip</variable>
                <default_value></default_value>
                <description>Router IP Address</description>
                <max_chars>16</max_chars>
                <type>input</type>
            </item>
            <item>
                <category>network</category>
                <sub_category>PC Port</sub_category>
                <dependent>$pcport_act_as|0</dependent>
                <variable>$pcport_subnet_mast</variable>
                <default_value></default_value>
                <description>Router Subnet Mask</description>
                <max_chars>16</max_chars>
                <type>input</type>
            </item>
            <item>
                <category>network</category>
                <sub_category>PC Port</sub_category>
                <variable>$enable_dhcp_server</variable>
                <default_value>1</default_value>
                <description>Enable DHCP Server</description>
                <type>list</type>
                <data>
                    <text>Enabled</text>
                    <value>1</value>
                </data>
                <data>
                    <text>Disabled</text>
                    <value>0</value>
                </data>
            </item>
            <item>
                <category>network</category>
                <sub_category>PC Port</sub_category>
                <dependent>$pcport_act_as|0</dependent>
                <variable>$pcport_start_ip_address</variable>
                <default_value></default_value>
                <description>Start IP Address</description>
                <max_chars>16</max_chars>
                <type>input</type>
            </item>
            <item>
                <category>network</category>
                <sub_category>PC Port</sub_category>
                <dependent>$pcport_act_as|0</dependent>
                <variable>$pcport_end_ip_address</variable>
                <default_value></default_value>
                <description>End IP Address</description>
                <max_chars>16</max_chars>
                <type>input</type>
            </item>
        </subcategory>
    </category>
</template_data>